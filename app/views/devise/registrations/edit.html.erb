<h2>アカウント情報更新 </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

        <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday , use_month_numbers:  true ,start_year: 1970 ,end_year:   (Time.now.year - 17) ,default: Date.new(1993, 1, 1) ,date_separator: '/' %>
  </div>

      <div class="field">
    <%= f.label :univercity %><br />
    <%= f.text_field :univercity, autofocus: true %>
  </div>

   <div class="field">
    <%= f.label :major %><br />
    <%= f.text_field :major, autofocus: true %>
  </div>

   <div class="field">
    <%= f.label :department %><br />
    <%= f.text_field :department, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :firstindustry %><br />
    <%= f.text_field :firstindustry, autofocus: true %>
  </div>

       <div class="field">
    <%= f.label :secondindustry %><br />
    <%= f.text_field :secondindustry, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <% if f.object.password_required? %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>



  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <% end %>

<% if false %>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <% end %>



  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
